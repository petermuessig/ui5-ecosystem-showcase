{
  "name": "ui5-app",
  "version": "0.1.1",
  "description": "UI5 application using custom middlewares and tasks",
  "private": true,
  "author": "Volker Buzek, Peter Muessig",
  "license": "THE DERIVED BEER-WARE LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/petermuessig/ui5-ecosystem-showcase.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "mkdirp dist",
    "build": "ui5 build self-contained",
    "start": "ui5 serve --config ui5-dist.yaml --port 1081 --open index.html",
    "dev": "ui5 serve --port 1081 --open index.html",
    "debug": "node --inspect node_modules/.bin/ui5 serve --port 1081",
    "watch:build": "npm-watch build",
    "watch": "npm-run-all prepare --parallel watch:build start"
  },
  "watch": {
    "build": {
      "patterns": [
        "webapp"
      ],
      "extensions": "html,js,json,xml,properties",
      "quiet": false
    }
  },
  "dependencies": {
    "@openui5/sap.m": "^1.69.1",
    "@openui5/sap.ui.core": "^1.69.1",
    "@openui5/sap.ui.layout": "^1.69.1",
    "@openui5/themelib_sap_fiori_3": "^1.69.1"
  },
  "devDependencies": {
    "@ui5/cli": "1.9.0",
    "mkdirp": "~0.5.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "~3.0.0",
    "ui5-middleware-cfdestination": "^0.1.1",
    "ui5-middleware-livereload": "^0.1.1",
    "ui5-middleware-livetranspile": "^0.1.1",
    "ui5-middleware-simpleproxy": "^0.1.1",
    "ui5-task-transpile": "^0.1.1"
  },
  "ui5": {
    "dependencies": [
      "@openui5/sap.ui.core",
      "@openui5/sap.m",
      "@openui5/sap.ui.layout",
      "@openui5/themelib_sap_fiori_3",
      "ui5-middleware-cfdestination",
      "ui5-middleware-livereload",
      "ui5-middleware-livetranspile",
      "ui5-middleware-simpleproxy",
      "ui5-task-transpile"
    ]
  }
}
