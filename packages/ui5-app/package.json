{
  "name": "ui5-app",
  "version": "0.6.0",
  "description": "UI5 application using custom middlewares and tasks",
  "private": true,
  "author": "Volker Buzek, Peter Muessig",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/petermuessig/ui5-ecosystem-showcase.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "mkdirp dist",
    "build": "ui5 build self-contained --clean-dest",
    "build:pwa": "ui5 build self-contained --clean-dest --config ui5-pwa.yaml --verbose",
    "start": "ui5 serve --config ui5-dist.yaml --port 1081 --open index.html",
    "dev": "ui5 serve --port 1081 --open index.html",
    "debug": "node --inspect node_modules/.bin/ui5 serve --port 1081",
    "test": "karma start",
    "watch:build": "npm-watch build",
    "watch": "npm-run-all prepare --parallel watch:build start",
    "ncu-upgrade": "ncu -u -x @ui5/cli"
  },
  "watch": {
    "build": {
      "patterns": [
        "webapp"
      ],
      "extensions": "html,js,json,xml,properties",
      "quiet": false
    }
  },
  "devDependencies": {
    "@openui5/ts-types": "^1.60.5",
    "@ui5/cli": "^2.2.4",
    "karma": "^5.0.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.2",
    "karma-ui5": "^2.1.1",
    "mkdirp": "~1.0.4",
    "npm-check-updates": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "~3.0.2",
    "ui5-middleware-cfdestination": "^0.2.0",
    "ui5-middleware-iasync": "^0.1.0-alpha.0",
    "ui5-middleware-index": "^0.2.0",
    "ui5-middleware-livereload": "^0.3.0",
    "ui5-middleware-livetranspile": "^0.2.1",
    "ui5-middleware-servestatic": "^0.3.0",
    "ui5-middleware-simpleproxy": "^0.3.0",
    "ui5-task-i18ncheck": "^0.3.0",
    "ui5-task-pwa-enabler": "^0.2.1",
    "ui5-task-stringreplacer": "^0.4.0",
    "ui5-task-transpile": "^0.2.0",
    "ui5-task-zipper": "^0.3.0"
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-cfdestination",
      "ui5-middleware-livereload",
      "ui5-middleware-iasync",
      "ui5-middleware-index",
      "ui5-middleware-livetranspile",
      "ui5-middleware-simpleproxy",
      "ui5-middleware-servestatic",
      "ui5-task-i18ncheck",
      "ui5-task-pwa-enabler",
      "ui5-task-stringreplacer",
      "ui5-task-transpile",
      "ui5-task-zipper"
    ]
  }
}
